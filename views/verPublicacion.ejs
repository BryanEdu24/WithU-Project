            <div class="d-flex" id="titulo">               
                <h1><%= publicacion.Titulo %></h1>              
            </div> 
            <div class="d-flex" id="publicacion">               
                <div class="d-flex align-items-start flex-column" id="columnaInfo">
                    <div class="p-2 align-self-stretch" id="usuario">
