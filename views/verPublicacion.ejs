                        <h5 id="userName">Anonimo</h5>
                    </div>
                    <div class="p-2 align-self-stretch" id="info">
                        <h4>Informacion</h4>
                        <p>Informacion referente a la publicacion</p>
                    </div>
                </div>
                <div class="align-self-stretch" id="cuerpo">
                    <p><%= publicacion.Cuerpo %></p>
                </div>                  
            </div>            
		</div>
